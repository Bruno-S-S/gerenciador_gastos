<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dp">

    <ImageView
        android:id="@+id/img_calendar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_mes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Outubro" />

    <TextView
        android:id="@+id/txt_itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/qtd_itens_mes"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_calendar"
        app:layout_constraintStart_toEndOf="@+id/img_calendar"
        app:layout_constraintTop_toBottomOf="@id/txt_month_name" />

    <TextView
        android:id="@+id/txt_itens_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_calendar"
        app:layout_constraintStart_toEndOf="@+id/txt_itens"
        app:layout_constraintTop_toBottomOf="@id/txt_month_name"
        tools:text="5" />


</androidx.constraintlayout.widget.ConstraintLayout>