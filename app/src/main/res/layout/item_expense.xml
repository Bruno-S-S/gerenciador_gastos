<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="35dp">

    <ImageView
        android:id="@+id/img_dinner"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_money_green" />

    <TextView
        android:id="@+id/txt_item_expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_dinner"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Compra no mercado" />

    <TextView
        android:id="@+id/txt_item_expense_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_item_expense_value"
        app:layout_constraintStart_toEndOf="@id/img_dinner"
        app:layout_constraintTop_toBottomOf="@id/txt_item_expense_name" />

    <TextView
        android:id="@+id/txt_item_expense_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_item_expense_value_text"
        app:layout_constraintTop_toBottomOf="@id/txt_item_expense_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_dinner" />

</androidx.constraintlayout.widget.ConstraintLayout>